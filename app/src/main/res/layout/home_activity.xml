<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="2.5dp"
    android:paddingRight="2.5dp"
    tools:context=".ui.HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:id="@+id/cdvCitizen"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="3dp"
                    android:onClick="onClick">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitXY"
                            android:src="@drawable/citizencorner"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@color/TransparentWhite"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/citizen_corner"
                            android:textAllCaps="true"
                            android:textColor="@color/DarkGreyText" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cdvKnowYourCity"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="3dp"

                    android:onClick="onClick">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitXY"
                            android:src="@drawable/kankariya"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@color/TransparentWhite"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/know_your_city"
                            android:textAllCaps="true"
                            android:textColor="@color/DarkGreyText" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:id="@+id/cdvOneTouchHelpline"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="3dp"
                    android:onClick="onClick">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitXY"
                            android:src="@drawable/helpline"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@color/TransparentWhite"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/one_touch_helpline"
                            android:textAllCaps="true"
                            android:textColor="@color/DarkGreyText" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cdvDownloadForm"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="3dp"
                    android:onClick="onClick">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitXY"
                            android:src="@drawable/downloadforms"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@color/TransparentWhite"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/download_forms"
                            android:textAllCaps="true"
                            android:textColor="@color/DarkGreyText" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:id="@+id/cdvUserGuide"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="3dp"
                    android:onClick="onClick">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitXY"
                            android:src="@drawable/userguide"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@color/TransparentWhite"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/user_guide"
                            android:textAllCaps="true"
                            android:textColor="@color/DarkGreyText" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cdvCityNewsEvents"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="3dp"
                    android:onClick="onClick">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitXY"
                            android:src="@drawable/newsevents"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@color/TransparentWhite"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/city_news_events"
                            android:textAllCaps="true"
                            android:textColor="@color/DarkGreyText" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:id="@+id/cdvChangePassword"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="3dp"
                    android:onClick="onClick">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitXY"
                            android:src="@drawable/chngpwd"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@color/TransparentWhite"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/change_password"
                            android:textAllCaps="true"
                            android:textColor="@color/DarkGreyText" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cdvFeedback"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="3dp"
                    android:onClick="onClick">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitXY"
                            android:src="@drawable/feed"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@color/TransparentWhite"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/feedback"
                            android:textAllCaps="true"
                            android:textColor="@color/DarkGreyText" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>